<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <OnAfterPipelineCopyAllFilesToOneFolderForMsdeploy>
      $(OnAfterPipelineCopyAllFilesToOneFolderForMsdeploy);
      RequireJSOptimize;
    </OnAfterPipelineCopyAllFilesToOneFolderForMsdeploy>
  </PropertyGroup>

  <Target Name="RequireJSOptimize">
    <PropertyGroup>
      <_Command>"$(MSBuildThisFileDirectory)..\..\node_modules\.bin\grunt" requirejs --no-color --dir=$(WPPAllFilesInSingleFolder)</_Command>
    </PropertyGroup>

    <Exec Command="$(_Command)" />
  </Target>

</Project>
